<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".05">

        <TextView
            android:text="This is a movie (20161112)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".90"
            android:gravity="left"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/textViewTitle"
            style="@android:style/TextAppearance.Small"/>

        <TextView
            android:text="9.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:id="@+id/textViewRate"
            style="@android:style/TextAppearance.Small" />
    </LinearLayout>

    <RelativeLayout
        android:background="@color/colorPale"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".55">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageViewCover"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ScrollView
        android:background="@color/colorPale"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".35">

        <TextView
            android:text="The true history of a man fighting for a app well done or daying traing will schudleling a gibbering thigns wile writing becouse what want to spend a week of his backations on the beach"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:textSize="20sp"
            android:id="@+id/textViewSynopsis"
            style="@android:style/TextAppearance.Small"/>
    </ScrollView>
</LinearLayout>